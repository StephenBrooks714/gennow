<!doctype html>
<html lang="en">
<%- include('layouts/header') -%>
<body>
<header>
    <%- include('layouts/navbar') -%>
</header>

<main>
    <section class="container" style="margin-top: 140px; margin-bottom: 90px;">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-12 mb-5 text-center">
                <h1 class="display-5">Our <span class="fw-bold text-brown">Gallery</span></h1>
            </div>
            <!-- show photos uploaded to uploads directory -->
            <div class="col-lg-12">
                <div class="row justify-content-center">
                    <% photosList.forEach((photo) => { %>
                        <div class="col-md-4 mb-3">
                            <% if(loggedIn) { %>
                                <a href="/deleteProject/:id">Delete <i class="far text-warning fa-trash-can"></i></a>
                            <% } %>
                            <img src="<%= photo.file %>" class="img-fluid" alt="Project">
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>
</main>

<!-- MDB -->
<%- include('layouts/footer') -%>
</body>
</html>