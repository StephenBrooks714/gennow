<!doctype html>
<html lang="en">
<%- include("layouts/header") -%>
<body>

<header class="mb-10">
    <%- include("layouts/navbar") -%>
</header>

<main>
    <!-- elements here -->
    <div class="container my-5 py-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-7 text-center">
                <h1 class="mb-4">Add A <span class="fw-bold">Board Member</span></h1>
                <form action="/store/boardMember" method="post" enctype="multipart/form-data">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" name="name" id="name" class="form-control" />
                        <label class="form-label" for="name">Name</label>
                    </div>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" name="role" id="role" class="form-control" />
                        <label class="form-label" for="role">Role</label>
                    </div>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" name="description" id="description" class="form-control" />
                        <label class="form-label" for="description">Description</label>
                    </div>
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="file" name="image" id="image" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-brown btn-block">Submit <i class="fas fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    </div>
    <!--Section: Design Block-->
</main>
<!-- Footer -->
<%- include("layouts/footer") -%>
</body>
</html>