<!doctype html>
<html lang="en">
<%- include("layouts/header") -%>
<body>

<header class="mb-10">
    <%- include("layouts/navbar") -%>
</header>

<main>
    <!-- elements here -->
    <div class="container my-5 py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="mb-4">Create a new page</h1>
                <form action="/create/page" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="3" placeholder="Enter content"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control-file" id="image" name="image">
                    </div>
                    <button type="submit" id="#newPage" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <!--Section: Design Block-->
</main>
<!-- Footer -->
<%- include("layouts/footer") -%>
<script type="application/ecmascript" src="/js/create.js"></script>
</body>
</html>